<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ceuhome">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Home"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/weather_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Check The Weather"
        android:textColor="#0D14A5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.152"
        tools:layout_editor_absoluteX="35dp" />

    <Button
        android:id="@+id/note_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="My Notes"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#0D14A5"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_button"
        app:layout_constraintVertical_bias="0.04"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/calculator_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="My Calculator"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#0D14A5"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_button"
        app:layout_constraintVertical_bias="0.04"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/notify_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Get Notify"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#0D14A5"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_button"
        app:layout_constraintVertical_bias="0.070"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/quiz_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="My Quiz"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#0D14A5"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_button"
        app:layout_constraintVertical_bias="0.090"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>